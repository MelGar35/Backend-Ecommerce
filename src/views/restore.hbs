<body class="align">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="/api">Shanti</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>
</nav>

<div>
  <form id="mailform">
 {{#unless update}}

<div>
	<input id="email" class="input100" type="text" name="email" placeholder="Email">
</div>
<div>
	<button  type="submit" class="login100-form-btn">Restaurar contraseña</button>
</div>
</div>

{{updateUserMessage}}
{{/unless}}
</form>

<div>
 <h2 id="mailMessage"></h2> 
 {{#if update}}

 <h5  id="token">{{token}}</h5>

 <form id="form">
<span>
  Restaura tu contraseña
</span>
<div data-validate = "Password is required">
	<input id="newPassword" class="input100" type="password" name="newPassword" placeholder="Indicanos tu nueva contraseña">
</div>
<div class="wrap-input100 validate-input" data-validate = "Password is required">
	<input id="password" class="input100" type="password" name="confirmPassword" placeholder="Ingresa la misma contraseña">
</div>

<div>
	<button id="enviarPeticion" class="login100-form-btn">
    Restaurar contraseña
	</button>
</div>

</form>

  {{/if}}

 </div>

<!-- Footer -->
<footer class="bg-dark text-light text-center py-3 mt-auto">
  <p>©Shanti 2023. Todos los derechos reservados.</p>
</footer>
</body>

<script type="module" src="/restore.js"></script>
