<h1>Carritos por carrito</h1>
<h3>Inicia sesion en api/session/login para crear tu carrito</h3>
<form action="/api/carts" method="post">

  <button>
    Crear Carrito
  </button>
  
</form>

<ul class="people_list">

  {{#each result}}

  <li>Carrito Numero: {{this._id}}</li>
  </br>


  <button>
    <a href="/api/carts/{{this._id}}" target="_blank"></a>
    Ver detalle
  </button>

  </br>
  </br>



  {{#if this.products}}

  <form action="/api/carts/{{this._id}}/purchase" method="post">

    <button> Comprar! </button>

  </form>

  {{/if}}

  </br>
  </br>

  {{/each}}
</ul>